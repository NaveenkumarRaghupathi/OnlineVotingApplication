@model IEnumerable<OnlineVoteApplication.Models.Mpseat>

@{
    ViewData["Title"] = "ViewMPSeats";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>View MPSeats</h1>

<p>
    <a asp-action="CreateMPSeats" class="btn btn-primary" style="color:#fff">Create MP Seats</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfSeats)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfSeats)
            </td>
           
            <td>
                <a asp-action="MPSeatsEdit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="MPSeatsDetails" asp-route-id="@item.Id">Details</a> |
                <a asp-action="MPSeatsDelete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
