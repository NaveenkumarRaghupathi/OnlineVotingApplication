@model OnlineVoteApplication.Models.PartyManagement

@{
    ViewData["Title"] = "CreateParty";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create Party</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateParty" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PartyName" class="control-label"></label>
                <input asp-for="PartyName" class="form-control" required="required" autocomplete="off" />
                <span asp-validation-for="PartyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Symbol" class="control-label"></label>
                <input asp-for="Symbol" class="form-control" required="required" autocomplete="off" />
                <span asp-validation-for="Symbol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartyImage" class="control-label"></label>
                <input type="file" asp-for="PartyImage" class="form-control" required="required" />
                <span asp-validation-for="PartyImage" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
