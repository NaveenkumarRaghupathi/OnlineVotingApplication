@model IEnumerable<OnlineVoteApplication.Models.PartyManagement>

@{
    ViewData["Title"] = "ViewParty";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>View Party</h1>

<p>
    <a asp-action="CreateParty" class="btn btn-primary" style="color:#fff">Create Party</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PartyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Symbol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartyImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PartyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                    <img src="~/images/@item.PartyImage" class="img-circle" alt="TestImage" width="100" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                <a asp-action="PartyEdit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="PartyDetails" asp-route-id="@item.Id">Details</a> |
                <a asp-action="PartyDelete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
