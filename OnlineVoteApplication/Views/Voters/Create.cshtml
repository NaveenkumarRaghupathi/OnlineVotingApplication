@model OnlineVoteApplication.Models.VoterRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create/Register New Voter</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VoterName" class="control-label"></label>
                <input asp-for="VoterName" class="form-control" required="required" autocomplete="off" />
                <span asp-validation-for="VoterName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="MobileNo" class="control-label"></label>
                <input asp-for="MobileNo" class="form-control" required="required" autocomplete="off" />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailId" class="control-label"></label>
                <input type="email" asp-for="EmailId" class="form-control" required="required" autocomplete="off" />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" required="required" autocomplete="off" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" required="required" autocomplete="off" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDProofImage" class="control-label"></label>
                <input type="file" asp-for="IDProofImage" class="form-control" required="required" />
                <span asp-validation-for="IDProofImage" class="text-danger"></span>
            </div><br />
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            <div class="form-group">
                <label class="label-danger" style="color:red">@ViewBag.AgeMessage</label>
            </div>

            <div class="form-group">
                <label class="label-danger" style="color:red">@ViewBag.ExistMessage</label>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
