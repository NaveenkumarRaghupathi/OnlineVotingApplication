@model IEnumerable<OnlineVoteApplication.Models.ContestManagement>

@{
    ViewData["Title"] = "VotingSystem";
    Layout = "~/Views/Shared/_VoterLayout.cshtml";
}

<h1>Voting System</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContestentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Symbol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContestentImage)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContestentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                <img src="~/images/@item.ContestentImage" class="img-circle" alt="NoImage" width="100" height="50" />
            </td>
            <td>
                @Html.RadioButtonFor(modelItem => item.Id, "Yes")
            </td>
            <td>
                <a asp-action="ConfirmUser" asp-route-id="@item.Id" class="btn btn-primary"> Confirm the User</a>
            </td>
        </tr>
}
    </tbody>
</table>
